<Project>

    <Import Project="..\Common.props" />

    <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />
    <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />

    <PropertyGroup>
        <RemoteName>$(Name).Remote.MSBuild</RemoteName>
    </PropertyGroup>

    <UsingTask AssemblyFile="$(SourceDir)$(RemoteName)\bin\$(Configuration)\net47\$(RemoteName).dll" TaskName="Cometary.CometaryTask" />

    <Target Name="Processing" Inputs="@(IntermediateAssembly->'%(FullPath)')" Outputs="@(IntermediateAssembly->'%(FullPath)')" AfterTargets="Compile">
        <Cometary.CometaryTask IsDebugging="False" />
    </Target>

</Project>