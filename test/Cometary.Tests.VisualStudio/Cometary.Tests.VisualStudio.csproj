<Project>

    <Import Project="..\Common.props" />

    <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />
    <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />

    <PropertyGroup>
        <HostName>$(Name).Hosting.VisualStudio</HostName>
    </PropertyGroup>

    <UsingTask AssemblyFile="$(SourceDirectory)$(HostName)\bin\$(Configuration)\net47\$(HostName).dll" TaskName="Cometary.VSCometaryTask" />

    <Target Name="Processing" Inputs="@(IntermediateAssembly->'%(FullPath)')" Outputs="@(IntermediateAssembly->'%(FullPath)')" AfterTargets="Compile">
        <Cometary.VSCometaryTask IsDebugging="False" />
    </Target>

</Project>