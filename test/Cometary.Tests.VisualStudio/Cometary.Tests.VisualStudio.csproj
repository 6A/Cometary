<Project>

    <Import Project="..\Common.props" />

    <Import Project="Sdk.props" Sdk="Microsoft.NET.Sdk" />
    <Import Project="Sdk.targets" Sdk="Microsoft.NET.Sdk" />

    <PropertyGroup>
        <RemoteName>$(Name).Remote.VisualStudio</RemoteName>
    </PropertyGroup>

    <UsingTask AssemblyFile="$(SourceDirectory)$(RemoteName)\bin\$(Configuration)\net47\$(RemoteName).dll" TaskName="Cometary.VSCometaryTask" />

    <Target Name="Processing" Inputs="@(IntermediateAssembly->'%(FullPath)')" Outputs="@(IntermediateAssembly->'%(FullPath)')" AfterTargets="Compile">
        <Cometary.VSCometaryTask IsDebugging="False" />
    </Target>

</Project>